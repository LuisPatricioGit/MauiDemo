        <StackLayout Padding="20" 
                     Spacing="2"
                     VerticalOptions="CenterAndExpand">
            <Label Text="Username"
                   TextColor="#555"
                   FontSize="20"
                   FontAttributes="Bold"/>
            <Entry Keyboard="Text"
                   Placeholder="Insira o nome de utilizador..."
                   PlaceholderColor="#CCC"
                   FontSize="20"
                   TextColor="#555"/>

            <Label Text="Password"
                   TextColor="#555"
                   FontSize="20"
                   FontAttributes="Bold"/>
            <Entry Placeholder="Insira a palavra-passe..."
                   PlaceholderColor="#CCC"
                   FontSize="20"
                   TextColor="#555"
                   Keyboard="Numeric"
                   IsPassword="True"/>
        </StackLayout>

        <StackLayout Padding="10"
                     VerticalOptions="Center"
                     HorizontalOptions="FillAndExpand">
            <Button x:Name="btnLogin"
                    Text="Log in"
                    FontSize="Large"
